<Window x:Class="mranetwpf.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ErrorWindow" Height="189" Width="420">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="237*" />
            <ColumnDefinition Width="161*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="123*" />
            <RowDefinition Height="27*" />
        </Grid.RowDefinitions>
        <Button Content="Copy" Grid.Column="1" Grid.Row="1" Height="23" HorizontalAlignment="Left" Name="copyButton" VerticalAlignment="Top" Width="75" />
        <Button Content="Close" Grid.Column="1" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="81,0,0,0" Name="closeButton" VerticalAlignment="Top" Width="75" />
        <TextBlock Height="Auto" HorizontalAlignment="Stretch" Name="errorTextBlock" Text="" VerticalAlignment="Stretch" Width="Auto" Grid.ColumnSpan="2" />
    </Grid>
</Window>
